<html>
    <head>
        <title>Hair Salon Lists</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>

        <div class="container">

            <h2 class="cover-heading header">Client List for Stylist: {{ stylist.getName }}</h2>

            <p class="lead">

                {% if clients is not empty %}
                <h4>Current Clients:</h4>

                <ul>
                    {% for client in clients %}
                        <li><a href="/clients/{{ client.getId }}">{{ client.getName }}</a></li>
                    {% endfor %}
                </ul>
                {% endif %}

                <h4>Add a client:</h4>

                <form action='/clients' method='post'>
                    <input id='stylist_id' name='stylist_id' type='hidden' value='{{ stylist.getId() }}'>
                    <label for ='client_name'>Client Name:</label><br/>
                    <input id='client_name' name='client_name' type='text' placeholder="" required>
                    <button class="btn-default" type="submit">Add Client</button>
                    <br/>
                </form>

                <form action="/stylists/{{ stylist.getId }}/edit" method="post">
                    <input name="_method" type="hidden" value="patch">
                    <label for="name">Rename your Stylist:</label><br>
                    <input id="name" name="name" type="text" required>
                    <button class="btn-default" type="submit">Update {{stylist.getName}}</button>
                </form>

                <form action="/delete_clients" method="post">
                    <input id='stylist_id' name='stylist_id' type='hidden' value='{{ stylist.getId() }}'>
                    <button class="btn-danger" type="submit">Delete Clients</button>
                </form>

                <a href="/"><button class="btn-default">Home</button></a>

            </p>

        </div>
    </body>
</html>
