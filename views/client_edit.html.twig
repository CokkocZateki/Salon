<html>
    <head>
        <title>Hair Salon Lists</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>

        <div class="container">

            <h1>Client Edit</h1>

            <p>

                <h2>Update {{ client.getName }}</h2>

                <form action="/clients/{{ client.getId }}/edit" method="post">
                    <input name="_method" type="hidden" value="patch">
                    <label for="client_name">Rename your Client:</label>
                    <input id="client_name" name="client_name" type="text" required>
                    <button class="btn-default" type="submit">Update</button>
                </form>

                <a href="/"><button class="btn-default">Home</button></a>

            </p>

        </div>
    </body>
</html>
